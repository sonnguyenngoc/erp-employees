<% content_for :title do %>
    <%= @department.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_employees.backend_departments_path %>">
    <i class="fa fa-book"></i> <%= t('.departments') %>
    </a> / <%= @department.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_employees.new_backend_department_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @department.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', department: @department %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>