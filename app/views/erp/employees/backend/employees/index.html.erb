<% content_for :title do %>
    <%= t('.employees') %>
<% end %>

<% content_for :page_title do %>
    <i class="icon-users"></i> <%= t('.employees') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_employees.new_backend_employee_path
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_employees.list_backend_employees_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_employees_employees.name'
        },
        {
            text: t('.department'),
            name: 'erp_employees_departments.name',
            select: {
                name: 'erp_employees_departments.id',
                data_url: erp_employees.dataselect_backend_departments_path
            }
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_employees.delete_all_backend_employees_path,
            data_method: 'DELETE',
            data_confirm: t('delete_confirm')
        }
    ],
    filters: [
    ],
    columns: [
        {
            text: t('.code'), name: 'code', value: true, checked: true
        },
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.birthday'), name: 'birthday', value: true, checked: true
        },        
        {
            text: t('.email'), name: 'email', value: true, checked: true
        },
        {
            text: t('phone'), name: 'phone', value: true, checked: true
        },
        {
            text: t('.address'), name: 'address', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_contacts_contacts.created_at', sort_direction: 'desc' }
) %>