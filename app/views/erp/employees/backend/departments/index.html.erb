<% content_for :title do %>
    <%= t('.departments') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-book"></i> <%= t('.departments') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_employees.new_backend_department_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_employees.list_backend_departments_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_employees_departments.name'
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_employees.delete_all_backend_departments_path,
            data_method: 'DELETE',
            data_confirm: t('delete_confirm')
        }
    ],
    filters: [
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: true
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_employees_departments.created_at', sort_direction: 'desc' }
) %>